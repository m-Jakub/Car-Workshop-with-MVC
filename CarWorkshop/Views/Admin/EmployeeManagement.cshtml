@using CarWorkshop.ViewModels.Admin
@model EmployeeManagementVM

@{
    ViewData["Title"] = "Employee Management";
}

<h2>Employee Management</h2>

<!-- Button to add a new employee -->
<a asp-action="AddEmployee" class="btn btn-primary mb-3">Add Employee</a>

<!-- Check if Model.Employees is not null before iterating -->
@if (Model.Employees != null)
{
    <!-- Table displaying existing employees -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Employees)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="EditEmployee" asp-route-id="@user.Id" class="btn btn-secondary">Edit</a>
                        <a asp-action="RemoveEmployee" asp-route-id="@user.Id" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
